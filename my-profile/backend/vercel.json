{
  "version": 2,
  "builds": [
    {
      "src": "guestbook-app/backend/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "guestbook-app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "guestbook-app/backend/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "guestbook-app/frontend/dist/$1"
    }
  ]
}